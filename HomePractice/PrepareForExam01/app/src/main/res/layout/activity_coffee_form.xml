<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CoffeeForm">

    <EditText
        android:id="@+id/formDen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Denumire cafea"
        />

    <EditText
        android:id="@+id/formPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Pret cafea"
        >
    </EditText>

    <CheckBox
        android:id="@+id/formCafeina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cafeina?" />

    <Button
        android:id="@+id/formBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adauga cafea"
        >
    </Button>

</LinearLayout>